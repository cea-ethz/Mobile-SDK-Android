<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/video_feed_frame"
            android:layout_width="360dp"
            android:layout_height="202dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <com.dji.sdk.sample.internal.utils.VideoFeedView
                android:id="@+id/primary_video_feed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>

            <View
                android:id="@+id/primary_cover_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:visibility="visible"/>
        </FrameLayout>

        <TextView
            android:id="@+id/text_calibration_feedback"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/video_feed_frame"
            android:layout_alignLeft="@+id/video_feed_frame"
            android:layout_marginTop="10dp"
            android:text="@string/aruco_feedback" />

        <Button
            android:id="@+id/btn_aruco_capture"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/btn_aruco_calibrate"
            android:text="@string/btn_aruco_capture_name"
            style="@style/common_button"/>

        <Button
            android:id="@+id/btn_aruco_calibrate"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:text="@string/btn_aruco_calibrate_name"
            style="@style/common_button"/>
    </RelativeLayout>
</merge>